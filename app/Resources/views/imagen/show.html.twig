{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imagen</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ imagen.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ imagen.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ imagen.path }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_imagen_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_imagen_edit', { 'id': imagen.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
