{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imagen list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Path</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imagen in imagens %}
            <tr>
                <td><a href="{{ path('admin_imagen_show', { 'id': imagen.id }) }}">{{ imagen.id }}</a></td>
                <td>{{ imagen.name }}</td>
                <td>{{ imagen.path }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_imagen_show', { 'id': imagen.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_imagen_edit', { 'id': imagen.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_imagen_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
