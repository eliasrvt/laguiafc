{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Nuevo Post</h3>
      </div>
      <div class="panel-body">
        {{ form_start(form) }}
        {#{{ dump(form.vars.value) }}#}
          {{ form_row(form.titulo) }}
          {{ form_row(form.contenido) }}
          {{ form_row(form.imagePortadaFile) }}
          {{ form_row(form.categorias) }}
              <div class="panel panel-default">
                  <div class="panel-body">
                    {{ form_label(form.galeria.nombre)}}
                    {{ form_widget(form.galeria.nombre)}}
                    {{ form_errors(form.galeria.nombre)}}

                    <ul id="foto-field-list" data-prototype="{{ form_widget(form.galeria.imagenes.vars.prototype)|e }}">
                      {% for img in form.galeria.imagenes %}
                          <li>{{ form_row(img.imageFile) }}</li>
                      {% endfor %}
                    </ul>
                    <a class="btn btn-primary" href="#" id="add-another-foto">Add foto</a>
                  </div>
              </div>
            <input class="btn btn-success pull-right" type="submit" value="Crear" />
          
        {{ form_end(form) }}
      </div>
    </div>
    <a href="{{ path('post_index') }}" class="btn btn-default btn-lg btn-block">Volver a la lista</a>
{% include ':post:add-img-js.html.twig' %}
{% endblock %}

