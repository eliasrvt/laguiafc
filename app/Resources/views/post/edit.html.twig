{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Editar Post</h3>
      </div>
      <div class="panel-body">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Guardar</button>
        {{ form_end(edit_form) }}
        <ul class="list-inline pull-right">
            <li>{{ form_start(delete_form) }}<button class="btn btn-danger" type="submit"><i class="fa fa-ban"></i> Eliminar</button>{{ form_end(delete_form) }}</li>
        </ul> 
      </div>
    </div> 
    <a href="{{ path('post_index') }}" class="btn btn-default btn-lg btn-block">Volver a la lista</a>

{% endblock %}
